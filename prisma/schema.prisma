// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Line {
  id            Int     @unique @default(autoincrement())
  name          String
  description   String?
  id_start_stop Int
  stop_start    Stop    @relation("start", fields: [id_start_stop], references: [id])
  id_end_stop   Int
  stop_end      Stop    @relation("end", fields: [id_end_stop], references: [id])

  Stop_Line     Stop_Line[]
  Stop_Historic Stop_Historic[]

  @@map("lines")
}

model User {
  id    Int    @unique @default(autoincrement())
  name  String
  email String @unique
  hash  String

  @@map("users")
}

model Stop {
  id            Int             @unique @default(autoincrement())
  name          String
  latitude      Float
  longitude     Float
  Stop_Line     Stop_Line[]
  Stop_Historic Stop_Historic[]
  start_line    Line[]          @relation("start")
  end_line      Line[]          @relation("end")

  @@map("stops")
}

model Bus {
  id       Int   @unique @default(autoincrement())
  capacity Int
  height   Float
  width    Float
  length   Float
  weight   Float

  @@map("bus")
}

model Stop_Line {
  id      Int  @unique @default(autoincrement())
  line    Line @relation(fields: [id_line], references: [id])
  id_line Int
  stop    Stop @relation(fields: [id_stop], references: [id])
  id_stop Int

  @@map("stops_lines")
}

model Stop_Historic {
  id             Int      @unique @default(autoincrement())
  time           DateTime
  entered_people Int
  left_people    Int
  id_line        Int
  line           Line     @relation(fields: [id_line], references: [id])
  id_stop        Int
  stop           Stop     @relation(fields: [id_stop], references: [id])

  @@map("stop_historic")
}
